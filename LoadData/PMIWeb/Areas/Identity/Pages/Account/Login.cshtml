@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar Sesion";
    Layout = null;
}

<!DOCTYPE html>
<html>

<!-- begin::Head -->
<head>
    <meta charset="utf-8" />
    <title>Program Manager Inspector</title>
    <meta name="description" content="Latest updates and statistic charts">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">

    <!--begin::Web font -->
    <script src="~/fonts/webfont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Poppins:300,400,500,600,700", "Roboto:300,400,500,600,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>

    <!--end::Web font -->
    <!--begin::Global Theme Styles -->
    <link href="~/vendors/base/vendors.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/designs/base/style.bundle.css" rel="stylesheet" type="text/css" />

    <!--end::Global Theme Styles -->
    <style>
        .img-login {
            max-width: 250px !important
        }

        @@media (min-width: 576px) {
            .img-sm-login {
                max-width: 330px !important
            }
        }
    </style>
    <link rel="shortcut icon" href="~/designs/media/img/logo/pmi-ico.ico" />
</head>

<!-- end::Head -->
<!-- begin::Body -->
<body class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--fixed m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">

    <!-- begin:: Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page">
        <div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-3" id="m_login" style="background-image: url('@Url.Content("~/app/media/img/bg/bg-2.jpg")')">
            <div class="m-grid__item m-grid__item--fluid m-login__wrapper">
                <div class="m-login__container">
                    <div class="m-login__logo">
                        <a href="#">
                            <img src="~/designs/media/img/logo/logo-1.png" class="img-login img-sm-login">
                        </a>
                    </div>
                    <div class="m-login__signin m-auto">
                        <div class="m-login__head">
                            <h2 class="m-login__title">Entrar al Sistema</h2>
                        </div>

                        <form class="m-login__form m-form" method="post">

                            <div class="form-group m-form__group">
                                <partial name="_ValidationSummary" model="@ModelState" />
                            </div>
                            <div class="form-group m-form__group">
                                <input asp-for="Input.Email" class="form-control m-input" autocomplete="off" placeholder="Nombre de usuario" />
                                <span asp-validation-for="Input.Email" class="text-danger ml-3"></span>
                            </div>
                            <div class="form-group m-form__group">
                                <input asp-for="Input.Password" class="form-control m-input m-login__form-input--last" autocomplete="off" placeholder="Contraseña" />
                                <span asp-validation-for="Input.Password" class="text-danger ml-3"></span>
                            </div>
                            <div class="row m-login__form-sub">
                                <div class="col m--align-left m-login__form-left">
                                    <label class="m-checkbox  m-checkbox--light">
                                        <input asp-for="Input.RememberMe" checked> No cerrar sesi&oacute;n
                                        <span></span>
                                    </label>
                                </div>
                            </div>
                            <div class="m-login__form-action">
                                <button type="submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn m-login__btn--primary" name="login">Acceder</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- end:: Page -->
    <!--begin::Global Theme Bundle -->
    <script src="~/vendors/base/vendors.bundle.js" type="text/javascript"></script>
    <script src="~/designs/base/scripts.bundle.js" type="text/javascript"></script>

    <!--end::Global Theme Bundle -->
    <!--begin::Page Scripts -->
    <script src="~/snippets/custom/pages/user/login.js" type="text/javascript"></script>
    <partial name="_ValidationScriptsPartial" />

    <!--end::Page Scripts -->
</body>

<!-- end::Body -->
</html>